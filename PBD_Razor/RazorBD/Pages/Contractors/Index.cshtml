@page
@model RazorBD.IndexContractorModel

@{
    ViewData["Title"] = "Index";
}

<h1>Contractors</h1>

<p>
    <a asp-page="Create">Create new Contractor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contractor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor[0].Nip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contractor[0].Bankaccount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contractor) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bankaccount)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Contractorid">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Contractorid">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Contractorid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
